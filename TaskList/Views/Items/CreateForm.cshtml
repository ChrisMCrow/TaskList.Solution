@{
  Layout = "_Layout";
}


<div class="container">
  <h1>To Do List</h1>
  <hr />
  <h2>Add a new item to @Model.GetName()</h2>
  <form action='/items' method='post'>
    <input id='categoryId' name='categoryId' type='hidden' value='@Model.GetId()'>
    <div class="form-group">
      <label for='itemDescription'>Item description</label>
      <input id='itemDescription' name='itemDescription' type='text'>
    </div>
    <div class="form-group">
      <label for='dueDate'>Due Date</label>
      <input id='dueDate' name='dueDate' type='date'>
    </div>
    <button type='submit' class='btn btn-danger'>Add Item</button>
  </form>
  <a href='/categories'><button class='btn btn-info'>View Categories</button></a>
  <a href='/'><button class='btn btn-success'>Back Home</button></a>
</div>
