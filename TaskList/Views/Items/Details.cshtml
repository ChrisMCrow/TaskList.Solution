@{
  Layout = "_Layout";
}

<div class='container'>
  <h1>To Do List</h1>
  <hr />
  <h2>@Model["item"].GetDescription()</h2>
  <h3>Due on @Model["item"].GetDueDate()</h3>
  <a href = '/categories/@Model["category"].GetId()/items/new'><button class='btn btn-danger'>Add Item</button></a>
  <a href = '/categories/@Model["category"].GetId()'><button class='btn btn-warning'>View "@Model["category"].GetName()"</button></a>
</div>
