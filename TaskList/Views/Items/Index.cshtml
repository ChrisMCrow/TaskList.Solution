@{
  Layout = "_Layout";
}

<div class='container'>
  <h1>To Do List</h1>
  <hr />
  <h2>All Items</h2>
  @foreach (var item in Model)
  {
      <h4><a href='/items/@item.GetId()'>@item.FindCategoryName()</a>: <a href='/categories/@item.FindCategoryId()/items/@item.GetId()'>@item.GetDescription()</a> | <a href="/items/@item.GetId()/update">Update</a> | <a href="/items/@item.GetId()/delete">Delete</a></h4>
      <p>Due @item.GetDueDate()</p>
  }
  <a href="/"><button class="btn btn-success">Back Home</button></a>
</div>
