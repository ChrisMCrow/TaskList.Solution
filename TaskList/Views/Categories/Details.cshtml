@{
  Layout = "_Layout";
}

<div class='container'>
  <h1>To Do List</h1>
  <hr />
  <h2>Here are all the items in @Model["category"].GetName():</h2>
  <ul>
    @foreach (var item in @Model["items"])
    {
      <li><a href='/categories/@Model["category"].GetId()/items/@item.GetId()'>@item.GetDescription() - @item.GetDueDate()</a></li>
    }
  </ul>
  <a href='/categories/@Model["category"].GetId()/items/new'><button class='btn btn-danger'>Add Item</button></a>
  <a href='/categories'><button class='btn btn-info'>View Categories</button></a>
  <a href='/'><button class='btn btn-success'>Back Home</button></a>
</div>
