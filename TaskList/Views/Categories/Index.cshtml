@{
  Layout = "_Layout";
}

<div class='container'>
  <h1>To Do List</h1>
  <hr />

  <h2>Categories</h2>
  @if (@Model.Count == 0)
  {
    <h4>No categories have been added yet!</h4>
  }
  @foreach (var category in Model)
  {
    <h3><a href='/categories/@category.GetId()'>@category.GetName()</a></h3>
    <h5><a href='/categories/@category.GetId()/update'>Edit</a> | <a href='/categories/@category.GetId()/delete'>Delete</a></h5>
  }
  <a href='/categories/new'><button class='btn btn-warning'>Add Category</button></a>
  <a href='/'><button class='btn btn-success'>Back Home</button></a>
</div>
